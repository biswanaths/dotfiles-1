## Aliases ##

# General aliases
alias c="clear"
alias cp="cp -vi"
alias rm="rm -v"
alias mv="mv -vi"
alias tmux="tmux -u2"
alias weechat="weechat-curses"
alias chpwn="chown"
alias stubs="bundle install --binstubs .bundle/bin && rbenv rehash"
alias gist="gist -s -P"
alias tat="tmux att"
alias apt="sudo apt-get"
alias open="xdg-open"
compdef apt="apt-get"

# ls Aliases
alias ls="ls --color -A"
alias sl="ls"
alias ll="ls -lh"
alias lt="ls -lth"

# Git aliases
alias g="git"
alias gst="git status -sb"
alias gcl="git clone"
alias gcm="git commit -m"
alias gcam="git commit -am"

# Edit stuff
alias evi="vim ~/dotfiles/.vimrc"
alias evb="vim ~/.vim/vimrc.bundles"
alias evt="vim ~/.tmux.conf"
alias evz="vim ~/.zshrc"

# Useful aliases
alias clang="clang -std=c99 -Wall -Wextra"
alias history-stat="history 0 | awk '{print \$2}' | sort | uniq -c | sort -n -r | head"
alias ping="ping -c 5"
alias pgrep="pgrep -l"
alias unzip="unzip -d ~/Downloads"

# geez fingers
alias heroky="heroku"
alias cim="vim"
# vim: ft=zsh
