## Aliases ##

# General aliases
alias c="clear"
alias cp="cp -vi"
alias rm="rm -v"
alias mv="mv -vi"
alias tmux="tmux -u2"
alias irc="weechat"
alias tat="tmux att"
alias apt="sudo apt-get"
alias xclip="xclip -sel clip"
alias open="xdg-open"

# Use apt-get completions
compdef apt="apt-get"

# ls aliases
alias ls="ls --color -A"
alias ll="ls --color -A -l"        # List format
alias le="ls --color -d *(-/DN^F)" # List empty directories

# Git aliases
alias g="git"
alias gst="git status -sb"
alias gcopy="git log -n 1 | head -n 1 | cut -d ' ' -f2 | tr -d '\n' | xclip -sel clip && echo 'Copied `xclip -out`'"

# Edit stuff
alias vi="vim"
alias vconf="vim ~/dotfiles/.vimrc"
alias tconf="vim ~/dotfiles/.tmux.conf"
alias zconf="vim ~/dotfiles/.zshrc"

# Vimutil aliases
alias vbund=". ~/dotfiles/.vimutil/upgrade_bundles"
alias vins=". ~/dotfiles/.vimutil/install_bundles"
alias vupd=". ~/dotfiles/.vimutil/upgrade_vim"
alias ebund="vim ~/dotfiles/.vimutil/upgrade_bundles"
alias eins="vim ~/dotfiles/.vimutil/install_bundles"
alias eupd="vim ~/dotfiles/.vimutil/upgrade_vim"

# Useful aliases
alias clang="clang -std=c99 -Wall -Wextra"
alias history-stat="history 0 | awk '{print \$2}' | sort | uniq -c | sort -n -r | head"
alias ping="ping -c 5"
alias pgrep="pgrep -l"
alias unzip="unzip -d ~/Downloads"
alias upd="brew update; brew outdated; brew upgrade"
alias compl="rm -rf ~/.zcomp* ~/.cache/zcomp* && compinit"
# vim: ft=zsh
